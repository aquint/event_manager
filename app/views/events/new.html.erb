<div class="container home">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h3>New Event</h3>
    <h4>Create a new event here:</h4>
    <%= simple_form_for(@event) do |f| %>

      <%= f.input :name %>

      <%= f.input :description %>

      <%= f.input :event_date, :as => :datetime_picker %>

      <%= f.submit "Create Event", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
</div>