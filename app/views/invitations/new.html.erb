<div class="container home">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h3>New Event</h3>
    <h4>Create a new event here:</h4>
    <%= form_for([@event, @invitation]) do |f| %>

      <%= f.hidden_field :event_id, :value => @event.id %>
      <%= f.label :attendee_id %>
      <%= f.text_field :attendee_id %>
      <%= f.submit 'Send', class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
</div>