<div class="container">
	<div class="row show-user">
		<div class="col-md-12">
			<h1></h1>
			<h2><%= @user.email %></h2>
			<ul>
				<% @created_events.each do |created_event| %>
					<li>
						<ul>
							<li><%= created_event.name %></li>
							<li><%= created_event.description %></li>
							<li><%= created_event.event_date %></li>
						</ul>
					</li>
				<% end %>
			</ul>
			<hr>
			<ul>
				<li><h3>Invitations</h3></li>
				<% @invitations.each do |invitation| %>
					<li>
						<h4><%= invitation.event.name %></h4>
						<%= form_for(current_user.memberships.build(attended_event_id: invitation.event_id)) do |f| %>

							<%= f.hidden_field :attended_event_id, value: invitation.event_id %>
							<%= f.submit 'Accept', class: "btn btn-primary" %>

						<% end %>
					</li>
				<% end %>
			</ul>
			<hr>
			<ul>
				<li><h3>Upcoming Events</h3></li>
				<% @upcoming_events.each do |upcoming| %>
					<li>
						<%= upcoming.name %>
					</li>
				<% end %>
			</ul>
			<hr>
			<ul>
				<li><h3>Past Events</h3></li>
				<% @past_events.each do |past| %>
					<li>
						<%= past.name %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>